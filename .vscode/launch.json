    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach", // executa o debug a aplicação quando está rodando
            "protocol": "inspector", // conectar o node debug a aplicação
            "restart": true,
            "name": "Debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}
